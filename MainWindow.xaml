<Window x:Class="EasyPlaylist.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyPlaylist"
        xmlns:controls="clr-namespace:EasyPlaylist.Views"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1050">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <telerik:RadButton Content="Invisible but why ?"></telerik:RadButton>
                <telerik:RadButton Content="Browse" Command="{Binding Browse}"></telerik:RadButton>
            </StackPanel>
            <controls:HierarchicalTreeView  DataContext="{Binding Explorer}"></controls:HierarchicalTreeView>
        </StackPanel>
        
        <GridSplitter 
            Grid.Row="0"
            Grid.Column="1" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            Width="5" Background="#FFBCBCBC"/>

        <DockPanel Grid.Row="0" Grid.Column="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <telerik:RadButton Content="Add playlist" Command="{Binding AddNewPlaylist}"></telerik:RadButton>
                <telerik:RadButton Content="Save playlists" Command="{Binding SavePlaylist}"></telerik:RadButton>
                <telerik:RadButton 
                Content="Remove selected playlist" 
                Command="{Binding RemoveSelectedPlaylist}"
                IsEnabled="{Binding SelectedPlaylist, Converter={StaticResource NullToFalseConverter}}"></telerik:RadButton>
            </StackPanel>
            <telerik:RadTabControl 
                               ItemsSource="{Binding Playlists}" 
                               DisplayMemberPath="Name"
                               SelectedItem="{Binding SelectedPlaylist}">
                <telerik:RadTabControl.ContentTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <controls:HierarchicalTreeView DataContext="{Binding}"></controls:HierarchicalTreeView>
                        </StackPanel>
                    </DataTemplate>
                </telerik:RadTabControl.ContentTemplate>
            </telerik:RadTabControl>
        </DockPanel>
        
        
    </Grid>
    
</Window>
