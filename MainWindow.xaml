<Window x:Class="EasyPlaylist.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyPlaylist"
        xmlns:controls="clr-namespace:EasyPlaylist.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <controls:ExplorerView DockPanel.Dock="Left" MinWidth="200" DataContext="{Binding Explorer}"></controls:ExplorerView>
        <StackPanel>

            <TextBox Text="{Binding Music.Name}" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
            <TextBox Text="{Binding Music.PathNameExtension}" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
            <TreeView>
                <TreeViewItem Header="North America">
                    <TreeViewItem Header="USA"></TreeViewItem>
                    <TreeViewItem Header="Canada"></TreeViewItem>
                    <TreeViewItem Header="Mexico"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="South America">
                    <TreeViewItem Header="Argentina"></TreeViewItem>
                    <TreeViewItem Header="Brazil"></TreeViewItem>
                    <TreeViewItem Header="Uruguay"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
        </StackPanel>
    </DockPanel>
    
</Window>
