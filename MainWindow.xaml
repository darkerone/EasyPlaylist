<Window x:Class="EasyPlaylist.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyPlaylist"
        xmlns:controls="clr-namespace:EasyPlaylist.Views"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1050">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Browse" Command="{Binding Browse}"></Button>
            <Button Content="Save playlists" Command="{Binding SavePlaylist}"></Button>
        </StackPanel>
        
        <controls:ExplorerView Grid.Row="1" Grid.Column="0" DataContext="{Binding Explorer}"></controls:ExplorerView>
        <GridSplitter 
            Grid.Row="1"
            Grid.Column="1" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            Width="5" Background="#FFBCBCBC"/>
        <telerik:RadTabControl Grid.Row="1" Grid.Column="2" >
            <telerik:RadTabControl.Items>
                <telerik:RadTabItem Header="{Binding Playlist.Name}">
                    <controls:ExplorerView DataContext="{Binding Playlist}"></controls:ExplorerView>
                </telerik:RadTabItem>
                <telerik:RadTabItem Header="Tab 2" />
                <telerik:RadTabItem Header="Tab 3" />
                <telerik:RadTabItem Header="Tab 4" />
            </telerik:RadTabControl.Items>
        </telerik:RadTabControl>
        
    </Grid>
    
</Window>
